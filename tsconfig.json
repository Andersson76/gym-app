{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "CommonJS",
    "strict": true,
    "types": ["node", "cypress"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["src/**/*", "**/*.tsx", "cypress/**/*.ts"]
}
